{
  "name": "coursera-fullstack-course5-ass1",
  "version": "1.0.0",
  "description": "oursera-fullstack-course5-ass1",
  "main": "app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "jshint js/**/src/* && jshint js/app.js",
    "build-js": "browserify js/app.js > static/bundle.js",
    "build-js-min": "browserify js/app.js | uglifyjs -mc > static/bundle.js",
    "watch-js": "watchify js/app.js -o static/bundle.js -dv",
    "build-css": "scss style/app.scss:static/bundle.css",
    "watch-css": "scss --watch style/app.scss:static/bundle.css",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-css",
    "start": "npm run watch & browser-sync start --server --files '*.html' 'static'"
  },
  "jshintConfig": {
    "undef": true,
    "unused": true,
    "curly": false,
    "predef": [
      "console",
      "window",
      "document",
      "$",
      "_"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/crescentsoftware/crescent-site#readme",
  "devDependencies": {
    "browserify": "^13.1.1",
    "browserify-css": "^0.9.2",
    "browserify-shim": "^3.8.12",
    "jquery": "^3.1.1",
    "modularscale-sass": "^2.1.1",
    "underscore": "^1.8.3"
  }
}
